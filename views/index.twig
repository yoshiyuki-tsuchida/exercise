{% extends "base.twig" %}
{% block title %}Voyage EC{% endblock %}
{% block menu %}
              <li class="active"><a href="/">Home</a></li>
	      <li class="active"><a href="/support/contact">お問い合わせ</a></li>
	      <li class="active"><a href="/mypage">MyPage</a></li>

{% endblock %}
{% block content %}
    <div class="page-header">
        <h1>最新のコンテンツ</h1>
    </div>
    <ul class="thumbnails">
    {% for content in contents.list %}
        <li class="span3">
            <div class="thumbnail">
                <a href="/content/{{ content.id }}"><img src="{{ content.image_path }}" alt=""></a>
                <h5>{{ content.title }}</h5>
                <p>{{ content.description }}</p>
                <p>ID = {{ content.id }}</p>
                <p>Price = {{ content.price }}</p>
            </div>
        </li>
    {% endfor %}
    </ul>
    <ul class="pager">
        {% if contents.prev %}
        <li><a href="/{{ contents.prev }}">Prev</a></li>
        {% endif %}
        {% if contents.next %}
        <li><a href=" {{ contents.next }}">Next</a></li>
        {% endif %}
    </ul>
{% endblock %}
