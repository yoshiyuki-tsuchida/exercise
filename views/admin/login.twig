{% extends "base.twig" %}
{% block title %}管理者ログイン{% endblock %}
{% block login %}
                <li class="active"><a href="/admin/login">ログイン</a></li>
{% endblock %}
{% block content %}
        <div class="row">
            <div class="span6 offset3">
                <form action="/admin/login" method="POST" class="form-horizontal well">
                    {% if errors.admin_name %}
                    <div class="control-group error">
                        <label class="control-label" for="admin_name">管理者名</label>
                        <div class="controls">
                            <input id="admin_name" name="admin_name" type="text" class="span3" value="{{ params.admin_name }}" />
                            <span class="help-inline">{{ errors.admin_name }}</span>
                        </div>
                    </div>
                    {% else %}
                    <div class="control-group">
                        <label class="control-label" for="admin_name">管理者名</label>
                        <div class="controls">
                            <input id="admin_name" name="admin_name" type="text" class="span3" value="{{ params.admin_name }}" />
                        </div>
                    </div>
                    {% endif %}
                    {% if errors.password %}
                    <div class="control-group error">
                        <label class="control-label" for="password">パスワード</label>
                        <div class="controls">
                            <input id="password" name="password" type="password" class="span3" />
                            <span class="help-inline">{{ errors.password }}</span>
                        </div>
                    </div>
                    {% else %}
                    <div class="control-group">
                        <label class="control-label" for="password">パスワード</label>
                        <div class="controls">
                            <input id="password" name="password" type="password" class="span3" />
                        </div>
                    </div>
                    {% endif %}
                    <div class="controls">
                        <button id="login" type="submit" class="btn btn-primary">ログイン</button>
                        新規登録は<a href="/admin/register">こちら</a>
                    </div>
                </form>
            </div>
        </div>
{% endblock %}
